[user]
	name = Antoni Meyer
	email = antoni@ameyer.dev

[core]
    compression = 9

    ; Error on whitespace
    whitespace = error

[fetch]
    ; Delete local branches that were delete on remote.
    prune = true

    
[merge]
    ; This will also show the base commit from where they diverged
    ; to make it easier to see what has changed in the merge conflict.
	conflictstyle = diff3

[init]
    defaultBranch = main

[pull]
    ; Rebase to avoid merge commits
    rebase = true

[push]
    ; Automatically set up remote repository for tracking
    autoSetupRemote = true

[rebase]
    autoStash = true
    missingCommitsCheck = warn

[status]
    branch = true
    showStash = true
    showUntrackedFiles = all
    short = True

[alias]
    ; One line without graphing
    lol = log --oneline

    ; Easy and quick to see a summary of the history
	hist = log --oneline --decorate --graph

[url "git@github.com:"]
    insteadOf = "gh:"
