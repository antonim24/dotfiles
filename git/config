[user]
	name = Antoni Meyer
	email = antoni@ameyer.dev

[branch]
    sort = -committerdate

[column]
    ui = auto

[core]
    ; Error on whitespace
    whitespace = error

[diff]
    ; Show better output when in diff
    algorithm = histogram

    ; Shows moved as a different color than added
    colorMoved = plain

    ; Shows index and working directory instead of a and b
    mnemonicPrefix = true

[fetch]
    ; Delete local branches that were delete on remote.
    prune = true
    prunetags = true

[init]
    defaultBranch = main

[log]
    date = iso
    
[merge]
    ; This will also show the base commit from where they diverged
    ; to make it easier to see what has changed in the merge conflict.
	conflictstyle = zdiff3

[pull]
    ; Rebase to avoid merge commits
    rebase = true

[push]
    ; Automatically set up remote repository for tracking
    autoSetupRemote = true

[rebase]
    autoSquash = true
    autoStash = true
    missingCommitsCheck = warn

[rerere]
    enabled = true

[status]
    branch = true
    showStash = true
    showUntrackedFiles = all
    short = True

[tag]
    ; Sort tags using version instead of alnum
    sort = version:refname

[alias]
    ; One line without graphing
    lol = log --oneline

    ; Easy and quick to see a summary of the history
	hist = log --oneline --decorate --graph

    # Clean but exclude vscode folder
    cb = clean -fxd --exclude=.vscode

[url "git@github.com:"]
    insteadOf = "gh:"

[url "git@github.com:antonim24/"]
    insteadOf = "mgh:"
