{
    // ----- Appearance ----- //
    "workbench.colorTheme": "Default Dark Modern",
    "editor.fontSize": 18,
    "editor.minimap.enabled": false,
    "zenMode.hideLineNumbers": false,
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "off",
        "strings": "off"
    },
    "workbench.iconTheme": "vscode-icons",
    "workbench.settings.editor": "json",
    // Scrolloff setting
    "editor.cursorSurroundingLines": 8,
    // ----- Generic for all files ----- //
    "files.autoSave": "afterDelay",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.rulers": [120],
    "editor.suggest.insertMode": "replace",
    "editor.autoClosingBrackets": "never",
    // This will force Vscode to always use unix style \n for LF instead of CRLF
    "files.eol": "\n",
    // ----- Vim Extension Settings ----- //
    "vim.foldfix": true,
    "vim.useSystemClipboard": true,
    "vim.highlightedyank.enable": true,
    "vim.smartRelativeLine": true,
    "vim.leader": "<space>",
    "vim.insertModeKeyBindingsNonRecursive": [
        { // Use jj for escape
            "before": ["j","j"],
            "after": ["<esc>"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["g","d"],
            "commands": ["editor.action.gotoDef"]
        },
        {
            "before": ["g","h"],
            "commands": ["editor.action.showDefinitionPreviewHover"]
        },
        {
            "before": ["<leader>","e"],
            "commands": ["workbench.view.explorer"]
        },
        {
            "before": ["<leader>","f","d"],
            "commands": ["editor.action.formatDocument"]
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>","f","s"],
            "commands": ["editor.action.formatSelection"]
        },
        {
            "before": ["p"],
            "commands": ["editor.action.clipboardPasteAction"]
        }
    ],
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false,
        "<C-p>": false,
        "<C-w>": false,
    },
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    // Settings for C++ files
    "C_Cpp.autocompleteAddParentheses": true,
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.compilerPath": "C:\\MinGW\\bin\\gcc.exe",
    "C_Cpp.codeAnalysis.clangTidy.enabled": true,
    "C_Cpp.codeAnalysis.clangTidy.checks.enabled": [
        "*"
    ],
    "C_Cpp.codeAnalysis.clangTidy.checks.disabled": [
        "android-*"
    ],
    "C_Cpp.intelliSenseEngine": "disabled",
    "[cpp]": {
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit"
        },
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    // Settings for Python files
    "[python]": {
        "editor.formatOnType": true,
        "editor.autoClosingBrackets": "always"
    },
    "remote.SSH.remotePlatform": {
        "homeserver": "linux"
    },
    "[json][jsonc]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace",
    },
    "[terraform]": {
        "editor.defaultFormatter": "hashicorp.terraform",
        "editor.formatOnSave": true
    },
    // Clangd Extension
    "clangd.arguments": [
        "--log=verbose",
        "--enable-config",
        "--query-driver=/usr/bin/x86_64-linux-gnu-g++-12",
    ],
    // CMake Extension
    "cmake.pinnedCommands": [
        "workbench.action.tasks.configureTaskRunner",
        "workbench.action.tasks.runTask"
    ],
    "cmake.configureOnEdit": false,
    // Doxygen settings
    "doxdocgen.c.triggerSequence": "///",
    "doxdocgen.generic.order": [
        "brief",
        // "empty",
        "tparam",
        "param",
        "return",
        "custom"
    ],
    "doxdocgen.cpp.ctorText": "Construct a new {name} object.",
    "doxdocgen.cpp.dtorText": "Destroy the {name} object.",

    // Other Settings
    "files.associations": {
        ".clang-format": "yaml",
        ".clang-tidy": "yaml",
        "vimrc": "Vimscript",
        "*aliases": "shellscript",
        "bash*": "shellscript",
        "profile": "shellscript"
    },
    "extensions.ignoreRecommendations": true,
    "workbench.settings.enableNaturalLanguageSearch": false,
    // ----- CSpell ----- //
    "cSpell.allowCompoundWords": true,
    "cSpell.customDictionaries": {
        "custom-dictionary-user": {
            "name": "programming-languages",
            "path": "~/.cspell/dictionary_programming_languages.txt",
            "addWords": true,
            "scope": "user"
        }
    },
    // ----- GitLens ----- //
    "git.openRepositoryInParentFolders": "never",
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
}
